{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "サウンドノベル実行",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": ["main.py"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            }
        }
    ]
}