{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "üñ•Ô∏è Launch CLI (TUI) [F5 Default]",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rust-tool-template"
                ],
                "filter": {
                    "name": "rust-tool-template",
                    "kind": "bin"
                }
            },
            "args": ["--cli"],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "debug"
            }
        },
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "üöÄ Launch Tauri Dev",
            "command": "cargo tauri dev",
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "debug"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "üéÆ Launch Demo Mode",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rust-tool-template"
                ],
                "filter": {
                    "name": "rust-tool-template",
                    "kind": "bin"
                }
            },
            "args": ["--demo"],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "debug"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "üåê Launch GUI (Direct)",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rust-tool-template",
                    "--features=gui"
                ],
                "filter": {
                    "name": "rust-tool-template",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "debug"
            }
        }
    ]
}