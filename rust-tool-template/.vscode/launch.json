{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch CLI",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rust-tool-template"
                ],
                "filter": {
                    "name": "rust-tool-template",
                    "kind": "bin"
                }
            },
            "args": ["--cli"],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "debug"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch GUI (Tauri)",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rust-tool-template",
                    "--features=gui"
                ],
                "filter": {
                    "name": "rust-tool-template",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "debug"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch Tauri Dev",
            "program": "cargo",
            "args": ["tauri", "dev"],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "debug"
            }
        }
    ]
}